<!-- activity_lesson_details.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/lessonNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lesson Name"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/lessonNumberTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lesson Number"
        android:textSize="18sp" />
    <ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/lessonDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lesson details will be shown here."
        android:textSize="16sp" />
</ScrollView>

    <!-- Button to watch the lesson video -->
    <Button
        android:id="@+id/btnWatchLesson"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Watch Lesson"
        android:onClick="onWatchLessonClicked"/>

    <!-- Button to mark the lesson as complete -->
    <Button
        android:id="@+id/btnMarkComplete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mark as Complete"
        android:onClick="onMarkAsCompleteClicked" />

</LinearLayout>
